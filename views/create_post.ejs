<!DOCTYPE html>
<%-include("partials/header.ejs") %>


<main class="form-signin w-50 m-auto">
    <form action="/" method="post" class="creation-form">
      <img class="mb-4" src="images/music-note.png" alt="" width="92" height="77">
      <h1 class="h3 mb-3 fw-normal">Create your music post</h1>
  
      <div class="form-floating">
        <input type="email" class="form-control" id="floatingInput" placeholder="The best of The Beatles it's yet to come!">
        <label for="floatingInput">Your post Title</label>
      </div>
      <div class="form-floating">
        <input type="text" class="form-control" id="floatingPassword" placeholder="John Doe">
        <label for="floatingInput">Your name</label>
      </div>
      <div class="form-floating">
        <input type="text" class="form-control form-post-content" id="floatingPassword" placeholder="Password">
        <label for="floatingPassword">Your post content</label>
      </div>
  
      <div class="form-check text-start my-3">
        <input class="form-check-input" type="checkbox" value="remember-me" id="flexCheckDefault">
        <label class="form-check-label" for="flexCheckDefault">
          Remember me
        </label>
      </div>
      <button class="btn btn-outline-secondary w-100 py-2" type="submit">Sign in</button>
      <p class="mt-5 mb-3 text-body-secondary">© 2017–2024</p>
    </form>
  </main>


<%-include("partials/footer.ejs") %>